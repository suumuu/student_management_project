<odoo>
  <record id="view_course_tree" model="ir.ui.view">
    <field name="name">student.course.tree</field>
    <field name="model">student.course</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="code"/>
        <field name="credit"/>
        <field name="student_count"/>
      </tree>
    </field>
  </record>

  <record id="view_course_form" model="ir.ui.view">
    <field name="name">student.course.form</field>
    <field name="model">student.course</field>
    <field name="arch" type="xml">
      <form string="Course">
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="code" readonly="1"/>
            <field name="credit" readonly="1"/>
          </group>
          <group>
            <field name="student_ids" widget="many2many_tags" readonly="1"/>
          </group>
          <footer>
            <button name="action_view_students" type="object" string="Show Enrolled Students" class="btn-secondary"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_course" model="ir.actions.act_window">
    <field name="name">Courses</field>
    <field name="res_model">student.course</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="student_management_menu_root" name="Student Management"/>
  <menuitem id="student_management_menu_students" name="Students" parent="student_management_menu_root" action="action_student"/>
  <menuitem id="student_management_menu_courses" name="Courses" parent="student_management_menu_root" action="action_course"/>
</odoo>