<odoo>
  
  <record id="view_student_tree" model="ir.ui.view">
    <field name="name">student.student.tree</field>
    <field name="model">student.student</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="email"/>
        <field name="roll_no"/>
        <field name="department"/>
      </tree>
    </field>
  </record>

 
  <record id="view_student_form" model="ir.ui.view">
    <field name="name">student.student.form</field>
    <field name="model">student.student</field>
    <field name="arch" type="xml">
      <form string="Student" create="false" edit="false">
        <header>
          
          <button name="action_submit_student"
                  type="object"
                  string="Submit"
                  class="btn-primary"
                  attrs="{'invisible': [('id','!=',False)]}"/>
          
          
          <button name="action_show_enrolled_courses"
                  type="object"
                  string="Show Enrolled Courses"
                  class="btn-secondary"
                  attrs="{'invisible': [('id','=',False)]}"/>
        </header>

        <sheet>
          <group>
            <field name="name" required="1"/>
            <field name="email" required="1"/>
            <field name="roll_no" required="1"/>
            <field name="department" required="1"/>
          </group>
          <group>
            <field name="course_ids"
                   widget="many2many_tags"
                   options="{'no_create': True}"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  
  <record id="action_student" model="ir.actions.act_window">
    <field name="name">Students</field>
    <field name="res_model">student.student</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>